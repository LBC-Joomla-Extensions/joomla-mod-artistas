<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0" client="site" method="upgrade">
    <name>Modulo Base</name>
    <author>Luis BC</author>
    <version>1.0.0</version>
    <description>Estructura básica para un módulo Joomla</description>
    <files>
        <filename>mod_modBase.xml</filename>
        <filename module="mod_modBase">mod_modBase.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>css/main.css</filename>
        <filename>js/main.js</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="titulo" 
                    type="text"                  
                    label="Título" 
                     description="Título de cabecera del módulo">
 		 </field>
                <field 
                    name="texto" 
                    type="textarea"                  
                    label="Texto" 
                    description="Texto del módulo">
		 </field>
                <field
                   name="directorio"
                   type="folderlist"
                   label="Directorio"
                   description="Directorio">
                </field>
            </fieldset>
        </fields>
    </config>
</extension>